<div class="container">
  <div class="card my-5 py-3 px-3">
    <h1 class="mb-4"><%= @restaurant.name %></h1>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
    <p>Category: <%= @restaurant.category.capitalize %></p>
    <hr>
    <h2 class="mb-4">Reviews:</h2>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li class="d-flex justify-content-between align-items-start">
          <p><%= review.content %></p>
          <p><%= review.rating %> Star(s)</p>
        </li>
      <% end %>
    </ul>
    <%= render "reviews/form", restaurant: @restaurant, review: @review %>
    <%= link_to 'Back to all restaurants', restaurants_path, class: 'btn btn-dark mt-3' %>
  </div>

</div>